# robotics-crash-course EditorConfig
# <https://editorconfig.org/>

root = true

[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
tab_width                = 8
indent_style             = tab
indent_size              = tab

[*.ino]
indent_style = space
indent_size  = 2

[*.md]
indent_style    = space
indent_size     = 2
max_line_length = 72
